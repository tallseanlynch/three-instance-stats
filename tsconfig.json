{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "jsx": "react", 
        "types": ["react", "three"],
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["dom", "es6"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
  }